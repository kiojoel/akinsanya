// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // We start with sqlite for easy local development
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid()) // Unique ID, replaces Sanity's _id
  slug      String   @unique // URL-friendly identifier
  title     String
  overview  String
  content   Json     // Stores the rich text content from the Novel editor
  published Boolean  @default(true)
  createdAt DateTime @default(now()) // Replaces Sanity's _createdAt
  updatedAt DateTime @updatedAt
}